<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="hu.ait.android.helen.shoppinglist">

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:replace="android:icon"
        android:icon="@drawable/icon2">
        <meta-data
            android:name="DATABASE"
            android:value="sugar_items.db" />
        <meta-data
            android:name="VERSION"
            android:value="15" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME"
            android:value="hu.ait.android.helen.shoppinglist" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"/>

        <activity
            android:name=".ShoppingList"
            android:label="@string/title_activity_intro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

            </activity>

        <activity
            android:name=".CreateItemActivity"
            android:label="@string/title">
        </activity>
    </application>

</manifest>
